<h1>Eat-Da-Burger!</h1>

<h2>Add New Burger</h2>
<form id="create-form">
  <div class="form-group">
    <label for="id_burger">Burger:</label>
    <input type="text" id="id_burger" name="name_burger">
  </div>
  <button type="submit">Add Burger</button>
</form>

<h2>burgers are ordered!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="ready_burger" data-id="{{id}}" data-newdevoured="{{devoured}}">Ready!</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers are served!</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
                {{burger_name}}   
            </li>
        {{/if}}
    {{/each}}
</ul>

